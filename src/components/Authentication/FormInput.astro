---
interface props {
  label: string;
  type: string;
  name: string;
  id: string;
  placeholder: string;
}

const { label, type, name, id, placeholder } = Astro.props;
---

<div class="mb-2">
  <label for={id} class="block text-black font-medium">{label}</label>
  <input
    type={type}
    id={id}
    name={name}
    class="w-full border border-gray-300 rounded-md py-2 px-3 md:py-3 md:px-4 focus:outline-none focus:border-blue-500"
    autocomplete="off"
    required
    placeholder={placeholder}
  />
</div>
